<h1>Listing statuscodes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuscodes.each do |statuscode| %>
      <tr>
        <td><%= statuscode.name %></td>
        <td><%= link_to 'Show', statuscode %></td>
        <td><%= link_to 'Edit', edit_statuscode_path(statuscode) %></td>
        <td><%= link_to 'Destroy', statuscode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_statuscode_path %>
